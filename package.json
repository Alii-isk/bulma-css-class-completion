{
  "name": "bulma-css-class-completion",
  "displayName": "Bulma CSS Class Completion",
  "description": "Provides CSS class name completion for the HTML class attribute based on Bulma CSS classes.",
  "version": "0.2.1",
  "publisher": "reliutg",
  "icon": "icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/reliut-g/bulma-css-class-completion"
  },
  "engines": {
    "vscode": "1.61.2"
  },
  "keywords": [
    "css",
    "css-completion",
    "bulma",
    "vscode",
    "extension"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "browser": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile -- --minify",
    "compile": "esbuild ./src/extension.ts --bundle --outdir=out --external:vscode --format=cjs --platform=node",
    "watch": "npm run dev -- --sourcemap --watch",
    "dev": "npm run compile -- --sourcemap",
    "lint": "eslint --fix src/**.ts",
    "format": "prettier --write \"src/**.ts\"",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "bulma-css-class-completion",
      "properties": {
        "bulma-css-class-completion.enabled": {
          "type": "boolean",
          "description": "Enable/disable Bulma CSS Class Completion",
          "default": true
        }
      }
    }
  },
  "devDependencies": {
    "@types/node": "16.11.6",
    "@types/vscode": "1.61.0",
    "@typescript-eslint/eslint-plugin": "5.2.0",
    "@typescript-eslint/parser": "5.2.0",
    "esbuild": "0.13.9",
    "eslint": "8.1.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "prettier": "2.4.1",
    "typescript": "4.4.4"
  }
}
